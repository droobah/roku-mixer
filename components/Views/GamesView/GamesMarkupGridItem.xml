<?xml version="1.0" encoding="utf-8" ?>
<component name="GamesMarkupGridItem" extends="ExtendableMarkupGridItem">
    <children>
        <LayoutGroup
            layoutDirection="vert"
            horizAlignment="custom"
            itemSpacings="[12, 0]">
            <MaskGroup
                id="ThumbnailRoundedMaskGroup"
                maskUri="pkg:/images/game_rounded_mask.png">
                <Poster
                    id="ThumbnailPoster">
                    <LayoutGroup
                        id="BadgeLayoutGroup"
                        layoutDirection="vert"
                        horizAlignment="right"
                        itemSpacings="[9]">
                        <StatusBadge
                            id="ViewerCountBadge"
                            icon="pkg:/images/icons/eye-f.svg.png"
                            color="0xEBEBEB" />
                    </LayoutGroup>
                </Poster>
            </MaskGroup>
            <Label
                id="TitleLabel"
                horizAlign="center"
                wrap="true"
                height="0"
                numLines="0"
                maxLines="2"
                lineSpacing="0"
                color="0xEBEBEB"
                translation="[20, 0]">
                <Font role="font" uri="pkg:/fonts/Rajdhani-Medium.ttf" size="36" />
            </Label>
        </LayoutGroup>
    </children>

    <script type="text/brightscript" uri="GamesMarkupGridItem.brs"/>
</component>