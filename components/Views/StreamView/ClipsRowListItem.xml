<?xml version="1.0" encoding="utf-8" ?>
<component name="ClipsRowListItem" extends="ExtendableRowListItem">
    <children>
        <LayoutGroup
            layoutDirection="vert"
            itemSpacings="[20, 6]"
            horizAlignment="custom">
            <MaskGroup
                id="ThumbnailRoundedMaskGroup"
                maskUri="pkg:/images/channel_rounded_mask.png">
                <Poster
                    id="ThumbnailPoster"
                    uri="pkg:/images/default_stream.png">
                    <LayoutGroup
                        id="BadgeLayoutGroup"
                        layoutDirection="vert"
                        horizAlignment="right"
                        itemSpacings="[9]">
                        <StatusBadge
                            id="ViewerCountBadge"
                            compact="true"
                            icon="pkg:/images/icons/eye-f.svg.png"
                            color="0xEBEBEB" />
                        <StatusBadge
                            id="RuntimeBadge"
                            compact="true"
                            color="0xEBEBEB" />
                    </LayoutGroup>
                </Poster>
            </MaskGroup>

            <ScrollingLabel
                id="DescriptionLabel"
                vertAlign="center"
                horizAlign="left"
                repeatCount="0"
                translation="[20, 0]">
                <Font role="font" uri="pkg:/fonts/NotoSans-Bold.ttf" size="26" />
            </ScrollingLabel>

            <SimpleLabel
                id="StreamedDateLabel"
                fontUri="pkg:/fonts/Barlow-Regular.ttf"
                fontSize="22"
                translation="[20, 0]" />
        </LayoutGroup>
    </children>

    <script type="text/brightscript" uri="ClipsRowListItem.brs"/>
</component>
