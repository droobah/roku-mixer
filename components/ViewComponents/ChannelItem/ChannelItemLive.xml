<?xml version="1.0" encoding="utf-8" ?>
<component name="ChannelItemLive" extends="Group">
    <interface>
        <field id="width" type="float" onChange="WidthChanged" />
        <field id="height" type="float" onChange="HeightChanged" />
        <field id="index" type="integer" />
        <field id="itemContent" type="node" onChange="ContentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="GridFocusChanged" />
        <field id="itemHasFocus" type="boolean" onChange="ItemFocusChanged" />
        <field id="focusPercent" type="float" onChange="ShowFocus" />
    </interface>

    <children>
        <LayoutGroup
            layoutDirection="vert"
            itemSpacings="[20, 12]"
            horizAlignment="custom">
            <MaskGroup
                id="ThumbnailRoundedMaskGroup"
                maskUri="pkg:/images/channel_rounded_mask.png">
                <Poster
                    id="ThumbnailPoster">
                    <LayoutGroup
                        id="BadgeLayoutGroup"
                        layoutDirection="vert"
                        horizAlignment="right"
                        itemSpacings="[9]">
                        <StatusBadge
                            text="â€¢ LIVE"
                            color="0xF82727" />
                        <StatusBadge
                            id="ViewerCountBadge"
                            icon="pkg:/images/icons/eye-f.svg.png"
                            color="0xEBEBEB" />
                    </LayoutGroup>
                </Poster>
            </MaskGroup>
            <Label
                id="TitleLabel"
                horizAlign="left"
                wrap="true"
                height="0"
                numLines="0"
                maxLines="2"
                lineSpacing="0"
                color="0xEBEBEB"
                translation="[20, 0]">
                <Font role="font" uri="pkg:/fonts/NotoSans-Bold.ttf" size="32" />
            </Label>
            <Group
                translation="[20, 0]">
                <MaskGroup
                    id="AvatarRoundedMaskGroup"
                    maskOffset="[0, 0]"
                    translation="[0, 0]"
                    maskUri="pkg:/images/circlemask_small.png">
                    <Poster
                        id="AvatarPoster"
                        width="60"
                        height="60"
                        loadDisplayMode="limitSize"
                        loadWidth="60"
                        loadHeight="60"
                        uri="" />
                </MaskGroup>
                <LayoutGroup
                    layoutDirection="vert"
                    translation="[70, 0]">
                    <Label
                        id="UsernameLabel"
                        vertAlign="center"
                        maxLines="1"
                        color="0xEBEBEB">
                        <Font role="font" uri="pkg:/fonts/Barlow-SemiBold.ttf" size="28" />
                    </Label>
                    <Label
                        id="GameLabel"
                        vertAlign="center"
                        maxLines="1"
                        color="0xC0C0C0">
                        <Font role="font" uri="pkg:/fonts/Barlow-Regular.ttf" size="24" />
                    </Label>
                </LayoutGroup>
            </Group>
        </LayoutGroup>
    </children>

    <script type="text/brightscript" uri="ChannelItemLive.brs"/>
</component>
