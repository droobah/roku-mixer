<?xml version="1.0" encoding="utf-8" ?>
<component name="ChannelItemLive" extends="Group">
    <interface>
        <field id="width" type="float" onChange="WidthChanged" />
        <field id="height" type="float" onChange="HeightChanged" />
        <field id="index" type="integer" />
        <field id="itemContent" type="node" onChange="ContentChanged" />
        <field id="gridHasFocus" type="boolean" onChange="GridFocusChanged" />
        <field id="itemHasFocus" type="boolean" onChange="ItemFocusChanged" />
        <field id="focusPercent" type="float" onChange="ShowFocus" />
    </interface>

    <children>
        <LayoutGroup
            layoutDirection="vert"
            itemSpacings="[12, 3]"
            translation="[0, 0]">
            <Poster
                id="ThumbnailPoster">
                <Rectangle
                    id="ViewerCountWrapperRectangle"
                    height="36"
                    color="0x000000CC"
                    inheritParentOpacity="false"
                    translation="[12, 12]">
                    <SimpleLabel
                        id="ViewerCountLabel"
                        vertOrigin="center"
                        fontUri="pkg:/fonts/BarlowSemiCondensed-Regular.ttf"
                        fontSize="24"
                        color="0xE51A1A"
                        translation="[6, 18]" />
                </Rectangle>
            </Poster>
            <Label
                id="TitleLabel"
                horizAlign="left"
                wrap="true"
                height="0"
                numLines="0"
                maxLines="2"
                lineSpacing="-6">
                <Font role="font" uri="pkg:/fonts/NotoSans-Bold.ttf" size="32" />
            </Label>
            <Group>
                <MaskGroup
                    id="RoundedMaskGroup"
                    maskOffset="[0, 0]"
                    translation="[0, 0]"
                    maskUri="pkg:/images/circlemask_small.png">
                    <Poster
                        id="AvatarPoster"
                        width="60"
                        height="60"
                        loadDisplayMode="limitSize"
                        loadWidth="60"
                        loadHeight="60"
                        uri="" />
                </MaskGroup>
                <LayoutGroup
                    layoutDirection="vert"
                    vertAlignment="vert"
                    translation="[72, -4]">
                    <Label
                        id="UsernameLabel"
                        vertAlign="center"
                        maxLines="1">
                        <Font role="font" uri="pkg:/fonts/BarlowSemiCondensed-Regular.ttf" size="28" />
                    </Label>
                    <Label
                        id="GameLabel"
                        vertAlign="center"
                        maxLines="1">
                        <Font role="font" uri="pkg:/fonts/BarlowSemiCondensed-Regular.ttf" size="28" />
                    </Label>
                </LayoutGroup>
            </Group>
        </LayoutGroup>
    </children>

    <script type="text/brightscript" uri="ChannelItemLive.brs"/>
</component>
