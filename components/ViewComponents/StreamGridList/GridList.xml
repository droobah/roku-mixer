<?xml version="1.0" encoding="utf-8" ?>
<component name="GridList" extends="Group">
    <interface>
        <field id="config" type="array" onChange="ConfigSet" />
        <field id="content" type="node" alias="MarkupGrid.content" />
        <field id="itemSelected" type="integer" alwaysNotify="true" />
        <field id="itemFocused" type="integer" />
    </interface>

    <children>
        <MarkupGrid
            id="MarkupGrid"
            itemComponentName="ListItemWrapper"
            itemSize="[531, 462]"
            itemSpacing="[42, 81]"
            numColumns="3"
            numRows="2"
            vertFocusAnimationStyle="fixedFocus"
            scrollSpeed="5"
            focusBitmapUri="pkg:/images/stream_gridlist_focus_thumbnail_$$RES$$.9.png"
            drawFocusFeedback="true" />
    </children>

    <script type="text/brightscript" uri="GridList.brs"/>
</component>