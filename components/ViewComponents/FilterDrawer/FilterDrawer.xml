<?xml version="1.0" encoding="utf-8" ?>
<component name="FilterDrawer" extends="Group">
    <interface>
        <field id="enabledFilters" type="array" onChange="EnabledFiltersSet" />
        <field id="toggle" type="bool" onChange="ToggleDrawer" />
    </interface>

    <children>
        <Rectangle
            id="Dimmer"
            color="0x000000DD"
            opacity="0" />
        
        <Group
            id="Drawer">
            <Rectangle
                id="DrawerBackground"
                color="0x2B2B2B">
                <Label
                    text="WIP" />
            </Rectangle>
            <Poster
                id="DrawerPeekerPoster"
                uri="pkg:/images/drawer_peeker_background.9.png"
                blendColor="0x2B2B2B">
                <SimpleLabel
                    id="FilterLabel"
                    text="FILTER"
                    vertOrigin="top"
                    horizOrigin="left"
                    rotation="1.5708"
                    color="0xEAEAEA"
                    fontUri="pkg:/fonts/BarlowSemiCondensed-Regular.ttf"
                    fontSize="38" />
            </Poster>
        </Group>

        <Animation
            id="CollapseAnimation"
            duration="0.2"
            repeat="false"
            easeFunction="linear">
            <Vector2DFieldInterpolator
                id="CollapsedAnimationInterpolator"
                key="[0.0, 1.0]"
                fieldToInterp="Drawer.translation" />
        </Animation>

        <Animation
            id="ExpandAnimation"
            duration="0.2"
            repeat="false"
            easeFunction="linear">
            <Vector2DFieldInterpolator
                id="ExpandAnimationInterpolator"
                key="[0.0, 1.0]"
                fieldToInterp="Drawer.translation" />
        </Animation>
    </children>

    <script type="text/brightscript" uri="FilterDrawer.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Helpers.brs"/>
</component>