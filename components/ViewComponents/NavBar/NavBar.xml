<?xml version="1.0" encoding="utf-8" ?>
<component name="NavBar" extends="Group" initialFocus="ButtonsTargetList">
    <children>
        <Poster
            width="1920"
            height="104"
            uri="pkg:/images/header_background.png"
            clippingRect="[0, 0, 1920, 200]" />
        <SimpleLabel
            text="MIXER"
            vertOrigin="center"
            translation="[39, 42]" />
        <TargetList
            id="ButtonsTargetList"
            itemComponentName="DynamicNavBarMenuItemComponent"
            duration="0.1"
            opacity="0.5"
            easeFunction="inOutCubic"
            advanceKey="right"
            reverseKey="left"
            translation="[180, 18]" />
        <SimpleLabel
            id="CalculateWidthLabel"
            fontUri="pkg:/fonts/BarlowSemiCondensed-Regular.ttf"
            fontSize="32"
            text=""
            translation="[-400, -400]" />
    </children>

    <script type="text/brightscript" uri="NavBar.brs"/>
    <script type="text/brightscript" uri="pkg:/source/Helpers.brs" />
</component>